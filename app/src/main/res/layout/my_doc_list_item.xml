<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:background="@mipmap/docthumb">


        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/imageThumbItem"
            android:layout_width="131dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_gallery"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/myDocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyDocName"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_margin="2dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15-02-09 13:25"
                android:singleLine="true"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/totalDocPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="9"
                android:singleLine="true"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:background="@drawable/counter_bg"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:visibility="invisible">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_tag"/>
            <TextView
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notes|whiteBoard"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkMerge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="false"
            android:visibility="gone"/>
</LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dialog_background"/>
</LinearLayout>